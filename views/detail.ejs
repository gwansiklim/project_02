function get_post(_id) {
    console.log("안녕", _id)
    $.ajax({
        type: "GET",
        url: `/api/detail/${_id}`,
        data: {},
        success: function(response) {
            let get_write = response;
            $('#titleing').append(get_write.title).val()
            $('#writeing').append(get_write.write).val()
            $('#nameing').append(get_write.nickname).val()
        }
    })
}



